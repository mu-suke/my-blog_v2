{
  "name": "nextjs_template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next-sitemap --config sitemap.config.js",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint '{src,cypress}/**/*.{ts,tsx}' --fix",
    "lint:precommit": "eslint '{src,cypress}/**/*.{ts,tsx}' --max-warnings 0",
    "fmt": "prettier -w -l './**/*.{js,jsx,ts,tsx,json}'",
    "fmt:precommit": "prettier -l './**/*.{js,jsx,ts,tsx,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run lint:precommit",
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": "npm run fmt:precommit"
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.4",
    "@chakra-ui/react": "2.2.4",
    "@emotion/react": "11.9.3",
    "@emotion/styled": "11.9.3",
    "@next/bundle-analyzer": "12.2.2",
    "framer-motion": "6.5.1",
    "microcms-js-sdk": "2.0.0",
    "next": "12.2.2",
    "next-seo": "5.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.4.0"
  },
  "devDependencies": {
    "@types/eslint": "8.4.5",
    "@types/node": "17.0.23",
    "@types/prettier": "2.6.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "8.19.0",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "microcms-typescript": "1.0.11",
    "next-sitemap": "3.1.11",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}

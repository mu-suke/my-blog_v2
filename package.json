{
  "name": "nextjs_template",
  "version": "0.1.0",
  "engines": {
    "node": "18.17.1"
  },
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next-sitemap --config sitemap.config.js",
    "start": "next start",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint '{src,cypress}/**/*.{ts,tsx}' --fix",
    "lint:precommit": "eslint '{src,cypress}/**/*.{ts,tsx}' --max-warnings 0",
    "fmt": "prettier -w -l './**/*.{js,jsx,ts,tsx,json}'",
    "fmt:precommit": "prettier -l './**/*.{js,jsx,ts,tsx,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run lint:precommit",
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": "npm run fmt:precommit"
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.17",
    "@chakra-ui/react": "2.4.9",
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@next/bundle-analyzer": "13.5.7",
    "cheerio": "1.0.0",
    "date-fns-tz": "1.3.8",
    "framer-motion": "9.0.1",
    "microcms-js-sdk": "2.2.1",
    "next": "13.5.7",
    "next-seo": "5.15.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "4.12.0"
  },
  "devDependencies": {
    "@types/eslint": "8.56.12",
    "@types/node": "18.19.59",
    "@types/prettier": "3.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.1",
    "eslint-config-next": "13.5.7",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "next-sitemap": "3.1.55",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "4.9.5"
  }
}
